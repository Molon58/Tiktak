@model UserViewModel
@{
	ViewData["Title"] = "Anasayfa";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
	<div class="row">
		<div class="card">
			<div class="card-header pt-2">
				<div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n5 position-relative">
					<i class="material-icons opacity-10">person</i>
				</div>
				<p class="mb-0 mt-3">
					<h5>
						Toplam Üye Sayısı: @ViewBag.users
