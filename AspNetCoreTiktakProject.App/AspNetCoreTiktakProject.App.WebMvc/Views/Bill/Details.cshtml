@model List<BillViewModel>
@{
    ViewData["Title"] = "Fatura Detay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        @{
            var user = Model.FirstOrDefault();
        }
      
        <div class="col-lg-5">

            <div class="col-xl-12 mb-xl-0 mb-4">
                <div class="card bg-transparent shadow-xl">
                    <div class="overflow-hidden position-relative border-radius-xl">
                        
                            
                        
                        <img src="~/TiktakAdmin/assets/img/illustrations/pattern-tree.svg" class="position-absolute opacity-2 start-0 top-0 w-100 z-index-1 h-100" alt="pattern-tree">
                        <span class="mask bg-gradient-dark opacity-10"></span>
                        <div class="card-body position-relative z-index-1 p-3">
                            <i class="material-icons text-white p-2">wifi</i>
                            <h5 class="text-white mt-4 mb-5 pb-2">@user.CardNumber</h5>
                            <div class="d-flex">
                                <div class="d-flex">
                                    <div class="me-4">
                                        <p class="text-white text-sm opacity-8 mb-0">Card Holder</p>
                                        <h6 class="text-white mb-0">@user.CardFullName</h6>
                                    </div>
                                    <div>
                                        <p class="text-white text-sm opacity-8 mb-0">Expires</p>
                                        <h6 class="text-white mb-0">@user.ExpireDate</h6>
                                    </div>
                                </div>
                                <div class="ms-auto w-20 d-flex align-items-end justify-content-end">
                                    <img class="w-60 mt-2" src="~/TiktakAdmin/assets/img/logos/mastercard.png" alt="logo">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card mt-4">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center">
                            <h6 class="mb-0">Ödeme yöntemi</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                                <img class="w-10 me-3 mb-0" src="~/TiktakAdmin/assets/img/logos/mastercard.png" alt="logo">
                                <h6 class="mb-0">****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;7852</h6>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                                <img class="w-10 me-3 mb-0" src="~/TiktakAdmin/assets/img/logos/visa.png" alt="logo">
                                <h6 class="mb-0">****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;5248</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
    <div class="row">
        <div class="col-md-12 mt-4">
            <div class="card">
                <div class="card-header pb-0 px-3">
                    <h6 class="mb-0"><span style="color:#e91e63;">@user.CustomerName @user.CustomerLastName</span> Adlı Kullanıcının Fatura Bilgileri</h6>
                </div>
            </div>
        </div>
    </div>
    
        
    
    <div class="container-fluid pt-5">
       
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-lg-6 mb-5">
                <div class="card">
                    <div class="card-header pb-0 px-3">
                        <h6 class="mb-0">Fatura Bilgileri</h6>
                        <h6 class="mt-3 text-sm">@item.OccuredDate</h6>
                    </div>
                    <div class="card-body pt-4 p-3">
                        <ul class="list-group">
                            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                <div class="d-flex flex-column">
                                    <h6 class="mb-3 text-sx">Satıcı Bilgileri</h6>
                                    <span class="mb-2 text-xs">Şirket Adı: <span class="text-dark font-weight-bold ms-sm-2">TikTak Limited</span></span>
                                    <span class="mb-2 text-xs">Adres: <span class="text-dark ms-sm-2 font-weight-bold">Gen Plaza,Beşiktaş/İstanbul</span></span>
                                    <span class="mb-2 text-xs">Email: <span class="text-dark ms-sm-2 font-weight-bold">info@tiktak.com</span></span>
                                    <span class="text-xs">Telefon: <span class="text-dark ms-sm-2 font-weight-bold">08002560000</span></span>
                                </div>

                            </li>
                            <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                <div class="d-flex flex-column">
                                    <h6 class="mb-3 text-sm">Araç Bilgileri</h6>
                                    <span class="mb-2 text-xs">Plaka: <span class="text-dark font-weight-bold ms-sm-2">@item.CarProperty.Plaque</span></span>
                                    <span class="mb-2 text-xs">Marka: <span class="text-dark font-weight-bold ms-sm-2">@item.CarProperty.Brand</span></span>
                                    <span class="mb-2 text-xs">Model: <span class="text-dark ms-sm-2 font-weight-bold">@item.CarProperty.Model</span></span>
                                </div>
                            </li>
                            <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                <div class="d-flex flex-column">
                                    <h6 class="mb-3 text-sm">Kiralayanın Bilgileri</h6>
                                    <span class="mb-2 text-xs">Adı: <span class="text-dark font-weight-bold ms-sm-2">@item.CustomerName</span></span>
                                    <span class="mb-2 text-xs">Soyadı: <span class="text-dark ms-sm-2 font-weight-bold">@item.CustomerLastName</span></span>
                                    <span class="text-xs">Email: <span class="text-dark ms-sm-2 font-weight-bold">@item.Email</span></span>
                                    <span class="text-xs">Adres: <span class="text-dark ms-sm-2 font-weight-bold">@item.Address</span></span>
                                </div>
                            </li>
                            <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                <div class="d-flex flex-column">
                                    <h6 class="mb-3 text-sm">Ödeme Bilgileri</h6>
                                    <span class="mb-2 text-xs">Kart Sahibinin Adı: <span class="text-dark font-weight-bold ms-sm-2">@item.CardFullName</span></span>
                                    <span class="mb-2 text-xs">Kart No: <span class="text-dark font-weight-bold ms-sm-2">@item.CardNumber</span></span>

                                    <span class="text-xs">Aracın Başlangıç Noktası: <span class="text-dark ms-sm-2 font-weight-bold">@item.DestinationPoint</span></span>
                                    <span class="text-xs">Aracın Bırakılma Noktası: <span class="text-dark ms-sm-2 font-weight-bold">@item.FinishedTime</span></span>
                                        <span class="text-xs">Aracı Kullandığı Süre: <span class="text-dark ms-sm-2 font-weight-bold">@((item.FinishedTime - @item.CarSale.StartedTime).TotalMinutes.ToString("0")) dk</span></span><br>
                                    <span class="text-xs"><b>Toplam Tutar:</b> <span class="text-dark ms-sm-2 font-weight-bold"><b>@item.Price</b></span></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            }
        </div>
        </div>
            
