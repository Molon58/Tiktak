@model List<BillViewModel>
@{
    ViewData["Title"] = "BillUser";
    Layout = "~/Views/Shared/_LayoutTiktak.cshtml";
}

    <!-- Detail Start -->
    <div class="container-fluid pt-5">
        <div class="container pt-5 ">
            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-4 lg-4 mb-5">
                        <div class="card">
                            <div class="card-header pb-0 px-3 ">
                                <h6 class="mb-0">Fatura Bilgileri</h6>
                                <h6 class="mt-3 text-sm">@item.OccuredDate.ToShortDateString()</h6>
                            </div>
                            <div class="card-body pt-4 p-3">
                                <ul class="list-group">
                                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                        <div class="d-flex flex-column">
                                            <h6 class="mb-3 text-sx">Satıcı Bilgileri</h6>
                                            <span class="mb-2 text-xs">Şirket Adı: <span class="text-dark font-weight-bold ms-sm-2">TikTak Limited</span></span>
                                            <span class="mb-2 text-xs">Adres: <span class="text-dark ms-sm-2 font-weight-bold">Gen Plaza,Beşiktaş/İstanbul</span></span>
                                            <span class="mb-2 text-xs">Email: <span class="text-dark ms-sm-2 font-weight-bold">info@tiktak.com</span></span>
                                            <span class="text-xs">Telefon: <span class="text-dark ms-sm-2 font-weight-bold">08002560000</span></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                        <div class="d-flex flex-column">
                                            <h6 class="mb-3 text-sm" >Araç Bilgileri</h6>
                                            <span class="mb-2 text-xs">Plaka: <span class="text-dark font-weight-bold ms-sm-2">@item.CarProperty.Plaque</span></span>
                                            <span class="mb-2 text-xs">Marka: <span class="text-dark font-weight-bold ms-sm-2">@item.CarProperty.Brand</span></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                        <div class="d-flex flex-column">
                                            <h6 class="mb-3 text-sm">Kiralayanın Bilgileri</h6>
                                            <span class="mb-2 text-xs">
                                                Adı Soyadı: <span class="text-dark font-weight-bold ms-sm-2">@item.CustomerName</span><br>
                                                <span class="text-xs">Aracın Başlangıç Noktası: <span class="text-dark ms-sm-2 font-weight-bold">@item.CarProperty.Location</span></span><br>
                                                <span class="text-xs">Aracın Bırakılma Noktası: <span class="text-dark ms-sm-2 font-weight-bold">@item.DestinationPoint</span></span><br>
                                                <span class="text-xs">Aracı Kullandığı Süre: <span class="text-dark ms-sm-2 font-weight-bold">@((item.FinishedTime - @item.CarSale.StartedTime).TotalMinutes.ToString("0")) dk</span></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
                                        <div class="d-flex flex-column">
                                            <h6 class="mb-3 text-sm bold">Ödeme Bilgileri</h6>
                                            <span class="mb-2 text-xs">Kart Sahibinin Adı: <span class="text-dark font-weight-bold ms-sm-2">@item.CardFullName</span></span>
                                            <span class="mb-2 text-xs">Kart No: <span class="text-dark font-weight-bold ms-sm-2">@item.CardNumber</span></span>
                                            <span class="text-xs"><b>Toplam Tutar:</b> <span class="text-dark ms-sm-2 font-weight-bold"><b>@item.Price ₺</b></span></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- Detail End -->



