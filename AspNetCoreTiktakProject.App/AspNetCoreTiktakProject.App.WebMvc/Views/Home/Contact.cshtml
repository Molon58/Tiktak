@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_LayoutTiktak.cshtml";
}

    <!-- Page Header Start -->
    <div class="container-fluid page-header">
        <h1 class="display-3 text-uppercase fot mb-3">İletişim</h1>
        <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a class="text-dark" asp-action="Index" asp-controller="Home">Anasayfa</a></h6>
            <h6 class="text-body m-0 px-3">/</h6>
            <h6 class="text-uppercase text-body m-0">İletişim</h6>
        </div>
    </div>
    <!-- Page Header Start -->
    <!-- About Start -->
    <div class="container-fluid py-5">
        <div class="container pt-5 pb-3">
            <h1 class="display-4 text-uppercase text-center mb-5 fot">İletişim Bilgileri</h1>
            <div class="row">
                <div class="col-lg-7 mb-2">
                    <div class="contact-form bg-light mb-4" style="padding: 30px;">
                        <form asp-controller="Home" asp-action="Contact" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-6 form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" type="text" class="form-control p-4" placeholder="Ad" required="required">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-6 form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" type="email" class="form-control p-4" placeholder="Email" required="required">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject" class="control-label"></label>
                                <input asp-for="Subject" type="text" class="form-control p-4" placeholder="Konu" required="required">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea asp-for="Message" class="form-control py-3 px-4" rows="5" placeholder="Mesaj" required="required"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="submit" value="Gönder" class="txt2 font-weight-bold text-xl button py-3 px-5" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5 mb-2">
                    <div class="d-flex flex-column justify-content-center px-5 mb-4" style="height: 435px;">
                        <div class="d-flex mb-3">
                            <i class="fa fa-2x fa-map-marker-alt flex-shrink-0 mr-3" style="color: #e82454;"></i>
                            <div class="mt-n1">
                                <h5 style="color: #e82454;">Genel Merkez</h5>
                                <p class="text-dark">Gen Plaza,Beşiktaş/İstanbul</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <i class="fa fa-2x fa-phone-alt fa-envelope-open flex-shrink-0 mr-3" style="color: #e82454;"></i>
                            <div class="mt-n1">
                                <h5 style="color: #e82454;">Telefon</h5>
                                <p class="text-dark">08002560000</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <i class="fa fa-2x fa-envelope-open flex-shrink-0 mr-3" style="color: #e82454;"></i>
                            <div class="mt-n1">
                                <h5 style="color: #e82454;">Email</h5>
                                <p class="m-0 text-dark">info@tiktak.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->


