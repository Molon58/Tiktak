@model RoleViewModel
@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row min-vh-80">
        <div class="col-6 mx-auto">
            <div class="card mt-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Rol Adı</h6>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        <div class="col-lg-12 mb-2">
                            <form asp-controller="Role" asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-6 form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control p-4" autofocus>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>


                                    <div class="yazi">
                                        <div class="form-group mt-2">
                                            <a asp-action="Index" asp-controller="Role" class="btn textyazi text-white font-weight-bold text-xs" style="background-color:#e91e63;">
                                                İptal
                                            </a>


                                            <input type="submit" value="Ekle" class="txt2 font-weight-bold text-xl btn text-white" style="background-color:#e91e63;" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
