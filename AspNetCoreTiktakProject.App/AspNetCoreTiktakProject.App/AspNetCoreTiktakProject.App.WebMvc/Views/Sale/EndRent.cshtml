@model BillViewModel

@{
    ViewData["Title"] = "EndRent";
    Layout = "~/Views/Shared/_LayoutTiktak.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    .my-button {
        padding: 10px 20px !important; /* Yatay ve dikey dolgular */
        font-size: 16px !important; /* Yazı tipi boyutu */
        background-color: #e75480 !important; /* Arkaplan rengi */
        color: #fff !important; /* Yazı rengi */
        border: 1px solid #e75480 !important; /* Kenarlık yok */
        border-radius: 5px !important; /* Kenar yuvarlatma */
        cursor: pointer !important; /* Üzerine gelince işaretçi türü */
    }

        .my-button:hover {
            background-color: white !important; /* Üzerine gelince arkaplan rengi değiştirme */
            color: #e75480 !important;
        }

    .icon-container {
        display: flex !important ;
        justify-content: center !important;
        align-items: center !important;
        width: 100px !important; /* Örneğin sabit bir genişlik verilebilir */
        height: 100px !important; /* Örneğin sabit bir yükseklik verilebilir */
    }

</style>

<hr />
<br />
<br />
<div class="row">
   
   
    <div class="col-md-4" style="margin:auto">
        <div class=" text-align: center">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 "><i class="fa-solid fa-car fa-beat-fade icon-container" style="color: #e75480; font-size: 100px;"></i></div>
                <div class="col-md-4"></div>
            </div>
           <br /> 
         
        </div>
        
        <form asp-action="EndRent"asp-controller="Sale"  method="post">
            <input type="hidden" asp-for="CarSaleId" value="@ViewBag.CarId" />
            <div  asp-validation-summary="ModelOnly" class="text-danger" ></div>
           
            <div class="form-group">
              
                <input asp-for="DestinationPoint" class="form-control" placeholder="Lütfen Aracı bıraktığınız noktayı yazınız.." />
                <span asp-validation-for="DestinationPoint" class="text-danger"></span>
            </div>
            
            <div class="form-group" > 
                <button class="my-button btn-outline-light" value="Sürüşü Durdur" type="submit">sürüşü durdur</button>
            </div>
        </form>
    </div>
    
</div>


